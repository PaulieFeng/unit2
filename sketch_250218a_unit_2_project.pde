int c,d;
int r1,r2,r3,r4,r5,r6;
int b1,b2,b3,b4,b5,b6,

void setup(){
  size(1000,600);
  
  
}

void draw() {
  
  //background setting
  c=0;
  d=1;
  
  //road setting
  r1=0;
  r2=200;
  r3=400;
  r4=600;
  r5=800;
  r6=-200;
  
  //building setting
  b1=0;
  b2=200;
  b3=400;
  b4=600;
  b5=800;
  b6=1000;
  b7=-200;
  
  
  // background
  background(c);
  c=c+d;
  if(c>=255){
    d=-d;
  }
  if(c<=0){
    d=-d;
  }
  

  
  fill(255,255,0);

  
  strokeWeight(0);
  
  // road
  fill(100,100,100);
  rect(0,400,1000,200);
  fill(255,255,0);
  
  r1+=3;
  r2+=3;
  r3+=3;
  r4+=3;
  r5+=3;
  r6+=3;

  rect(r1,490,100,20);
  rect(r2,490,100,20);
  rect(r3,490,100,20);
  rect(r4,490,100,20);
  rect(r5,490,100,20);
  rect(r6,490,100,20);
  
  
  if (r1>1000) {
    r1=-200;
  }
  if (r2>1000) {
    r2=-200;
  }
  if (r3>1000) {
    r3=-200;
  }
  if (r4>1000) {
    r4=-200;
  }
  if (r5>1000) {
    r5=-200;
  }
  if (r6>1000) {
    r6=-200;
  }
 
 
 
  //building
    fill(150);
    
  b1+=3;
  b2+=3;
  b3+=3;
  b4+=3;
  b5+=3;
  b6+=3;
  b7+=3;
  
  rect(b7,170,200,230);
  rect(b1,50,200,350);
  rect(b2,170,200,230);
  rect(b3,50,200,350);
  rect(b4,170,200,230);
  rect(b5,50,200,350);
  rect(b6,170,200,230);

  
  if (b1>1000) {
    b1=-200;
  }
  if (b2>1000) {
    r2=-200;
  }
  if (b3>1000) {
    b3=-200;
  }
  if (b4>1000) {
    b4=-200;
  }
  if (b5>1000) {
    b5=-200;
  }
  if (b6>1000) {
    b6=-200;
  }
  if (b7>1000) {
    b7=-200;
  }
  
  fill(255,255,0);

  
  


  //car
  fill(255,0,0);
  rect(300,420,400,80);
  rect(350,360,300,60);
  fill(100,0,0);
  ellipse(380,500,50,50);
  ellipse(620,500,50,50);
  
  
  

  

 
 
 
 
 
 
 
 
 
 
 
 
 
 }
